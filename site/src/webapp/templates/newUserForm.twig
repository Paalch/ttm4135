
{% extends 'base.twig' %}



{% block content %}

<h2>Register new user</h2>
{{ flash.error|raw }} <br />

<form action="" method="POST">

<label>Username: </label>
<input type="text" name="username"> <br />
<label>Password: </label>
<input type="password" name="password"> <br />
<label>Repeat password: </label>
<input type="password" name="passwordConf"> <br />
<label>Email: </label>
<input type="text" name="email"> <br />
<input type="submit" name="submit" value="Submit">
</form>

    <h5>Passwords has to contain</h5>
    <ul>
        <li>At least on capital letter</li>
        <li>At least on small letter</li>
        <li>At least on number</li>
        <li>At least on special character</li>
        <li>At least on 8 characters long</li>
    </ul>


{% endblock %}

